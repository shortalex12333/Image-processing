{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://image-processing.celesteos.com/schemas/commit_request.json",
  "title": "Commit Request",
  "description": "Request schema for committing a receiving session (HOD only)",
  "type": "object",
  "required": ["commitment_notes"],
  "properties": {
    "commitment_notes": {
      "type": "string",
      "description": "Notes explaining the commitment (audit trail)",
      "minLength": 1,
      "maxLength": 2000
    },
    "override_unverified": {
      "type": "boolean",
      "description": "Allow commit even if some lines are unverified (HOD override)",
      "default": false
    },
    "force_commit": {
      "type": "boolean",
      "description": "Force commit despite warnings (HOD emergency override)",
      "default": false
    },
    "financial_approval": {
      "type": ["object", "null"],
      "description": "Financial approval details if costs require sign-off",
      "properties": {
        "approved_by": {
          "type": "string",
          "format": "uuid",
          "description": "User ID of financial approver"
        },
        "approval_reference": {
          "type": "string",
          "description": "PO number, budget code, or approval reference"
        },
        "approved_at": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["approved_by", "approval_reference"]
    },
    "delivery_metadata": {
      "type": ["object", "null"],
      "description": "Additional delivery metadata",
      "properties": {
        "carrier": {
          "type": "string",
          "description": "Shipping carrier (FedEx, UPS, DHL, etc.)"
        },
        "tracking_number": {
          "type": "string",
          "description": "Shipment tracking number"
        },
        "delivery_date": {
          "type": "string",
          "format": "date",
          "description": "Actual delivery date"
        },
        "received_by": {
          "type": "string",
          "description": "Name of person who physically received delivery"
        },
        "delivery_location": {
          "type": "string",
          "description": "Where on yacht delivery was received"
        }
      }
    }
  }
}
